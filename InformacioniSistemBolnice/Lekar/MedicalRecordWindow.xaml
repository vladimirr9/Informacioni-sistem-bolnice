<Window x:Class="InformacioniSistemBolnice.Lekar.MedicalRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InformacioniSistemBolnice.Lekar"
        mc:Ignorable="d"
        Title="PrikazKartona" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10,5,-10,-5">
        <TabControl HorizontalAlignment="Left" Height="399" VerticalAlignment="Top" Width="758">
            <TabItem Header="Karton">
                <Grid Background="#FFE5E5E5" Margin="0,-1,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="79*"/>
                        <ColumnDefinition Width="673*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="NameTextBox" Margin="170,70,210,269" Grid.Column="1" IsEnabled="False"/>
                    <ComboBox x:Name="GenderComboBox" Margin="420,148,210,191" Grid.Column="1" IsEnabled="False">
                        <ComboBoxItem Content="M"/>
                        <ComboBoxItem Content="Ž"/>
                    </ComboBox>
                    <TextBox x:Name="BirthdayTextBox" Margin="170,148,346,191" MaxWidth="270" Grid.Column="1" IsEnabled="False"/>
                    <TextBox x:Name="JmbgTextBox" Margin="170,219,210,120" Grid.Column="1" IsEnabled="False"/>
                    <TextBox x:Name="MedicalCardTextBox" Margin="170,288,210,51" Grid.Column="1" IsEnabled="False"/>
                    <Label Content="Ime i prezime:" HorizontalAlignment="Left" Margin="58,70,0,0" VerticalAlignment="Top" Grid.Column="1" Width="92" Height="32" />
                    <Label Content="Datum rodjenja:" HorizontalAlignment="Left" Margin="58,148,0,0" VerticalAlignment="Top" Grid.Column="1" Width="92" Height="32"/>
                    <Label Content="Pol:" HorizontalAlignment="Left" Margin="370,148,0,0" VerticalAlignment="Top" Grid.Column="1" Width="35" Height="32"/>
                    <Label Content="JMBG:" HorizontalAlignment="Left" Margin="58,219,0,0" VerticalAlignment="Top" Grid.Column="1" Width="92" Height="32"/>
                    <Label Content="Zdravstvena kartica:" HorizontalAlignment="Left" Margin="33,288,0,0" VerticalAlignment="Top" Grid.Column="1" Width="117" Height="32"/>
                </Grid>
            </TabItem>
            <TabItem Header="Alergije">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Alergije:" HorizontalAlignment="Left" Margin="150,53,0,0" VerticalAlignment="Top" FontSize="20"/>
                    <Label Content="Dodaj alergiju:" HorizontalAlignment="Left" Margin="93,277,0,0" VerticalAlignment="Top" FontSize="20"/>
                    <Button Content="Dodaj" HorizontalAlignment="Left" Margin="499,279,0,0" VerticalAlignment="Top" Width="106" Height="35" Background="#FF2B78E4" Foreground="White" Click="Button_Click_3"/>
                    <ComboBox x:Name="AllergiesComboBox" HorizontalAlignment="Left" Margin="264,279,0,0" VerticalAlignment="Top" Width="200" Height="35" DisplayMemberPath="Name"/>
                    <ListBox x:Name="AllergiesList" HorizontalAlignment="Left" Height="183" Margin="264,53,0,0" VerticalAlignment="Top" Width="200" FontSize="20"/>

                </Grid>
            </TabItem>
            <TabItem Header="Pregledi">
                <Grid Background="#FFE5E5E5">
                    <RichTextBox x:Name="AnamnesisTextBox" HorizontalAlignment="Left" Height="180" Margin="207,61,0,0" VerticalAlignment="Top" Width="358">
                        <FlowDocument>
                            <Paragraph>
                                <Run Text=""/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                    <Label Content="Anamneza:" HorizontalAlignment="Left" Margin="69,61,0,0" VerticalAlignment="Top" Width="108" FontSize="20"/>
                    <Button Content="Sacuvaj" HorizontalAlignment="Left" Margin="207,261,0,0" VerticalAlignment="Top" Width="106" Height="35" Click="Button_Click_1" Background="#FF2B78E4" Foreground="White"/>
                    <Button Content="Uput" HorizontalAlignment="Left" Margin="459,261,0,0" VerticalAlignment="Top" Width="106" Height="35" Click="Button_Click_2" Background="#FF2B78E4" Foreground="White"/>
                </Grid>
            </TabItem>
            <TabItem Header="Terapija">
                <Grid Background="#FFE5E5E5">
                    <RichTextBox x:Name="DescriptionTextBox" HorizontalAlignment="Left" Height="100" Margin="192,122,0,0" VerticalAlignment="Top" Width="276">
                        <FlowDocument>
                            <Paragraph>
                                <Run Text=""/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                    <DatePicker x:Name="BeginDatePicker" HorizontalAlignment="Left" Margin="192,251,0,0" VerticalAlignment="Top"/>
                    <DatePicker x:Name="EndDatePicker" HorizontalAlignment="Left" Margin="442,251,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.44,0.535"/>
                    <TextBox x:Name="FrequencyTextBox" HorizontalAlignment="Left" Height="32" Margin="296,308,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="69"/>
                    <Button Content="Izdaj terapiju" HorizontalAlignment="Left" Margin="527,42,0,0" VerticalAlignment="Top"  Width="106" Height="32" Click="Button_Click" Background="#FF2B78E4" Foreground="White"/>
                    <ComboBox x:Name="DrugsComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="276" Margin="192,42,0,0" Height="32" IsSynchronizedWithCurrentItem="False" FontSize="14">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Naziv}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock HorizontalAlignment="Left" Height="32" Margin="69,42,0,0" TextWrapping="Wrap" Text="Naziv leka:" VerticalAlignment="Top" Width="118" FontSize="20"/>
                    <TextBlock HorizontalAlignment="Left" Height="32" Margin="69,122,0,0" TextWrapping="Wrap" Text="Opis:" VerticalAlignment="Top" Width="118" FontSize="20"/>
                    <TextBlock HorizontalAlignment="Left" Height="32" Margin="69,246,0,0" TextWrapping="Wrap" Text="Pocetak:" VerticalAlignment="Top" Width="118" FontSize="20"/>
                    <TextBlock HorizontalAlignment="Left" Height="32" Margin="350,246,0,0" TextWrapping="Wrap" Text="Kraj:" VerticalAlignment="Top" Width="60" FontSize="20"/>
                    <TextBlock HorizontalAlignment="Left" Height="32" Margin="192,308,0,0" TextWrapping="Wrap" Text="Na svaka" VerticalAlignment="Top" Width="118" FontSize="20"/>
                    <TextBlock HorizontalAlignment="Left" Height="32" Margin="384,308,0,0" TextWrapping="Wrap" Text="dana." VerticalAlignment="Top" Width="84" FontSize="20"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
