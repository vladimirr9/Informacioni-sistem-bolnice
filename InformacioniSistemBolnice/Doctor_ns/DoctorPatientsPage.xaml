<Page x:Class="InformacioniSistemBolnice.Doctor_ns.DoctorPatientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InformacioniSistemBolnice.Doctor_ns"
      mc:Ignorable="d" 
      d:DesignHeight="718" d:DesignWidth="1140"
      Title="PatientsPage">

    <Grid>
        <DataGrid x:Name="PatientsDataGrid" AutoGenerateColumns="True" Margin="35,75,34,137" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Korisničko Name" Binding="{Binding korisnickoIme}"  Width="120"/>
                <DataGridTextColumn Header="Ime" Binding="{Binding ime}" Width="120"/>
                <DataGridTextColumn Header="Prezime" Binding="{Binding prezime}" Width="120" />
                <DataGridTextColumn Header="JMBG" Binding="{Binding jmbg}" Width="100"/>
                <DataGridTextColumn Header="Adresa" Binding="{Binding adresaStanovanja}" Width="200"/>
                <DataGridTextColumn Header="Pol" Binding="{Binding pol}" Width="100"/>
                <DataGridTextColumn Header="Guest" Binding="{Binding isGuest}" Width="*" />


            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Zdravstveni karton" Margin="35,0,0,65" Height="35" VerticalAlignment="Bottom" Background="#FF2B78E4" Foreground="White" HorizontalAlignment="Left" Width="128" Click="Button_Click"/>

    </Grid>
</Page>
