<Page x:Class="InformacioniSistemBolnice.Doctor_ns.DrugsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InformacioniSistemBolnice.Doctor_ns"
      mc:Ignorable="d" 
      d:DesignHeight="718" d:DesignWidth="1140"
      Title="LekoviPage">

    <Grid Background="White">
        <Button Content="Lekovi za potvrdu" Margin="281,566,0,0" Background="#FF2B78E4" Foreground="White" HorizontalAlignment="Left" Width="128" Height="34" VerticalAlignment="Top" Click="LekoviZaPotvrduClick"/>
        <ListBox x:Name="DrugsList" HorizontalAlignment="Left" Height="454" VerticalAlignment="Top" Width="225" Margin="184,72,0,0" SelectionChanged="SelectionChange" FontSize="20"/>
        <Label Content="Lekovi:" HorizontalAlignment="Left" Margin="71,72,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Sastav:" HorizontalAlignment="Left" Margin="568,72,0,0" VerticalAlignment="Top" FontSize="20"/>
        <ListBox x:Name="IngredientsList" HorizontalAlignment="Left" Height="380" Margin="682,72,0,0" VerticalAlignment="Top" Width="250" FontSize="20"/>
        <ComboBox x:Name="IngredientsComboBox" HorizontalAlignment="Left" Margin="682,490,0,0" VerticalAlignment="Top" Width="250" Height="36" FontSize="20" DisplayMemberPath="Name"/>
        <Button Content="Dodaj sastojak" Margin="804,566,0,0" Background="#FF2B78E4" Foreground="White" HorizontalAlignment="Left" Width="128" Height="34" VerticalAlignment="Top" Click="DodajSastojakClick"/>

    </Grid>
</Page>
