<Page x:Class="InformacioniSistemBolnice.Doctor_ns.TutorialPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InformacioniSistemBolnice.Doctor_ns"
      mc:Ignorable="d" 
      d:DesignHeight="718" d:DesignWidth="1140"
      Title="TutorialPage">

    <Grid Background="#FFDBE4EE">
        <Label Content="Tutorial za obavljanje pregleda:" Margin="427,44,0,0" VerticalAlignment="Top" FontSize="20" HorizontalAlignment="Left" Width="285"/>
        <Button x:Name="StartStopButton" Margin="505,0,0,51" Command="{Binding StartStopCommand}" Height="35" VerticalAlignment="Bottom" Background="#FF2B78E4" Foreground="White" Content="{Binding ButtonText}" HorizontalAlignment="Left" Width="128"/>
        <Grid Height="466" Margin="129,104,129,0" VerticalAlignment="Top">
            <ContentControl Content="{Binding MediaElementObject}"/>
        </Grid>

    </Grid>
</Page>
