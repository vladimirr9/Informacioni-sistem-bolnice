                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label x:Name="MedicineLabel" HorizontalAlignment="Left" Margin="383,214,0,0" VerticalAlignment="Top" FontSize="24"/>
