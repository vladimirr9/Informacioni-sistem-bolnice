<Window x:Class="InformacioniSistemBolnice.Secretary_ns.NewNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InformacioniSistemBolnice.Secretary_ns"
        mc:Ignorable="d"
        Title="NewNotificationWindow" Height="440" Width="560">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="363*"/>
        </Grid.RowDefinitions>
        <TextBlock  HorizontalAlignment="Left" Margin="74,96,0,0" TextWrapping="Wrap" Text="Naslov:" VerticalAlignment="Top" FontSize="20" FontFamily="Verdana" TextAlignment="Right" Grid.Row="1"/>
        <TextBox x:Name="TitleTextBox" HorizontalAlignment="Left" Height="23" Margin="173,97,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="301" FontSize="16" FontFamily="Verdana" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="65,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" FontFamily="Verdana" TextAlignment="Right" Grid.Row="1"><Run Text="Sadržaj:"/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name="ContentsTextBox" HorizontalAlignment="Left" Height="109" Margin="173,145,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="301" FontSize="14" FontFamily="Verdana" Grid.Row="1"/>
        <Button x:Name="Potvrdi" Content="Potvrdi" HorizontalAlignment="Left" Margin="129,280.041,0,0" VerticalAlignment="Top" Width="117" FontSize="20" FontFamily="Verdana" Height="42" Click="ConfirmButton_Click" Grid.Row="1"/>
        <Button x:Name="Otkazi" Content="Otkaži" HorizontalAlignment="Left" Margin="327,280.041,0,0" VerticalAlignment="Top" Width="117" FontSize="20" FontFamily="Verdana" Height="42" Click="CancelButton_Click" Grid.Row="1"/>
        <TextBlock  HorizontalAlignment="Left" Margin="55,33,0,0" TextWrapping="Wrap" Text="Primaoci:" VerticalAlignment="Top" FontSize="20" FontFamily="Verdana" TextAlignment="Right" Grid.RowSpan="2"/>
        <ListBox x:Name="RecipientsListBox" HorizontalAlignment="Left" Height="104" Margin="173,23,0,0" VerticalAlignment="Top" Width="301" FontFamily="Verdana" FontSize="14" SelectionMode="Extended" Grid.RowSpan="2"/>

    </Grid>
</Window>
